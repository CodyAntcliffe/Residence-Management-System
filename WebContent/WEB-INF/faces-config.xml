<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
	<managed-bean>
		<managed-bean-name>register</managed-bean-name>
		<managed-bean-class>Controls.Register</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>logIn</managed-bean-name>
		<managed-bean-class>Controls.LogIn</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<description>Page bean to control the get room list function.</description>
		<managed-bean-name>roomPageBean</managed-bean-name>
		<managed-bean-class>ManagedBeans.RoomPageBean</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
		<managed-property>
        	<property-name>userType</property-name>
        	<value>#{logIn.userType}</value>
    	</managed-property>
    	<managed-property>
        	<property-name>userName</property-name>
        	<value>#{logIn.userName}</value>
    	</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>studentPageBean</managed-bean-name>
		<managed-bean-class>ManagedBeans.StudentPageBean</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>studentInfo</managed-bean-name>
		<managed-bean-class>ManagedBeans.StudentInfo</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
		<managed-property>
        	<property-name>userName</property-name>
        	<value>#{logIn.userName}</value>
    	</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>facilityPageBean</managed-bean-name>
		<managed-bean-class>ManagedBeans.FacilityPageBean</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>applicationsPageBean</managed-bean-name>
		<managed-bean-class>ManagedBeans.ApplicationsPageBean</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>validationBean</managed-bean-name>
		<managed-bean-class>ManagedBeans.ValidationBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>BulletinPageBean</managed-bean-name>
		<managed-bean-class>ManagedBeans.BulletinPageBean</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>
	<navigation-rule>
		<display-name>welcome.xhtml</display-name>
		<from-view-id>/welcome.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>toLogin</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>welcome.xhtml</display-name>
		<from-view-id>/welcome.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>toRegister</from-outcome>
			<to-view-id>/register.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>register.xhtml</display-name>
		<from-view-id>/register.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>registered</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>login.xhtml</display-name>
		<from-view-id>/login.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>toHome</from-outcome>
			<to-view-id>/Home.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>Home.xhtml</display-name>
		<from-view-id>/Home.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>toStudentsPage</from-outcome>
			<to-view-id>/StudentsPage.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>Home.xhtml</display-name>
		<from-view-id>/Home.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>toApplicationsPage</from-outcome>
			<to-view-id>/ApplicationsPage.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>Home.xhtml</display-name>
		<from-view-id>/Home.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>toMyApplicationsPage</from-outcome>
			<to-view-id>/MyApplicationsPage.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>Home.xhtml</display-name>
		<from-view-id>/Home.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>toMyRoomPage</from-outcome>
			<to-view-id>/MyRoomPage.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>Home.xhtml</display-name>
		<from-view-id>/Home.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>toRoomPage</from-outcome>
			<to-view-id>/roomPage.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>login.xhtml</display-name>
		<from-view-id>/login.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>toRegister</from-outcome>
			<to-view-id>/register.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>Home.xhtml</display-name>
		<from-view-id>/Home.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>toLogin</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>Home.xhtml</display-name>
		<from-view-id>/Home.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>toRegister</from-outcome>
			<to-view-id>/register.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>WEB-INF/templates/BasicTemplate.xhtml</display-name>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>toLogin</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>WEB-INF/templates/BasicTemplate.xhtml</display-name>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>toLogin</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>WEB-INF/templates/BasicTemplate.xhtml</display-name>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>toHome</from-outcome>
			<to-view-id>/Home.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>roomPage.xhtml</display-name>
		<from-view-id>/roomPage.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>toRoomSearchResults</from-outcome>
			<to-view-id>/roomSearchResults.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
</faces-config>
